@import "assets/resources.styl"

input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button
	-webkit-appearance none
	margin 0


.Contact
	height 100%
	width 100%
	&-container
		width 100%
		height 100%
		margin auto
		position fixed
		top 0
		bottom 0
		left 0
		right 0
	&-images
		background url('../images/architecture.jpg') fixed
		background-position center center
		background-repeat no-repeat
		background-size cover
		height 100%
		width 100%
	&-containerForm
		position relative
		z-index 1
		padding 4.5em 1em
		width 100%
	&-title
		margin 0
		text-transform uppercase
		font-size 1.3em
		font-weight 700
		color default
	&-paragraph
		color default
		padding 1.2em 0
		font-size 1em
	&-containerForm
		display block
	&-contactForm
		display block
	&-label
		color default
		margin 0
		padding 0
		font-size 1em
		text-transform capitalize
		display block
	&-contactInput
		font-size 1.1em
	&-contactInput,
	&-contactArea
		font-size 1.1em
		display block
		width 100%
		background none
		border-bottom 1px solid default
		border 1px solid default
		margin 0
		padding 0
		color default
		&:focus
			border 1px solid default
			box-sizing border-box
	&-contactArea
		height 80px
	&-contactButton
		display block
		background success
		color default
		text-transform uppercase
		letter-spacing 3px
		border-bottom 5px solid successBorder
		border-radius 10px
		text-decoration none
		width 100%
		margin 1em 0
		height 3em
		border 1px solid transparent
		&:hover
			background successBorder
@media screen and (min-width 768px)
	.Contact
		&-containerForm
			width 100%
			margin 0 auto
		&-contactForm
			margin 0 5em
@media screen and (min-width 1024px)
	.Contact
		&-contactForm
			margin 0 10em
		&-contactButton
			width 300px
			float right