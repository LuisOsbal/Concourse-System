.Login
	width 100%
	height 100vh
	position absolute
	top 0
	right 0
	transition .5s
	&-transparentImage
		width 100%
		height 100vh
		background rgba(0, 0, 0, .4)
		top 0
		position absolute
	&-container
		margin 3em .5em 0
	&-imageContainer
		text-align center
		height 55px
	&-image
		width 100px
	&-form
		margin-top 1em
		padding 0 .5em
	&-label
		font-size 1.2em
		display block
		margin-top 1em
		width 100%
		color default
	&-inputText
		margin-top .5em
	&-select
		width 100%
		margin-top .5em
	&-button
		width 100%
		height 2.5em
		margin 1.5em 0 0 0
		background danger
		color default
		font-weight 400
		font-size 1.2em
		border-radius .5em
		border 1px solid transparent
		border-bottom 5px solid dangerBorder
		outline primaryBorder
	&-labelError
		display block
		text-align center
		margin-top 1em
		width 100%
		color danger
		font-size 1.1em


@media screen and (min-width 320px)
	.Login
		&-container
			margin 4.5em .5em 0
		&-imageContainer
			height 65px
		&-image
			width 130px
@media screen and (min-width 480px)
	.Login
		&-container
			margin .5em
		&-imageContainer
			height 95px
		&-image
			width 180px
@media screen and (min-width 568px)
	.Login
		&-imageContainer
			height 105px
		&-image
			width 200px
@media screen and (min-width 600px)
	.Login
		&-container
			margin 6.5em .5em 0
		&-imageContainer
			height 105px
		&-image
			width 200px
@media screen and (min-width 768px)
	.Login
		&-container
			width 500px
			margin 7em auto
		&-imageContainer
			height 105px
		&-image
			width 200px
@media screen and (min-width 1024px)
	.Login
		&-container
			width 420px
			margin 9em auto